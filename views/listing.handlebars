<div class="row">
    <div class="col-auto">
        <h2>Hey there, {{user.name}}.</h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Create a New Listing</h3>

        {{#if vinyl}}
        <form class="form new-listing-form">
            <div class="form-group">
                <label for="vinyl-title"> Vinyl Title: </label>
                <input class="form-input" type="text" id="vinyl-name" name="vinyl-name"/>
            </div>

            <div class="form-group">
                <label for="vinyl-artist"> Artist: </label>
                <input class="form-input" type="text" id="vinyl-artist" name="vinyl-artist"/>
            </div>

            <div class="form-group">
                <label for="vinyl-genre"> Genre: </label>
                <input class="form-input" type="text" id="vinyl-genre" name="vinyl-genre"/>
            </div>

            <div class="form-group">
                <label for="vinyl-desc"> Description: </label>
                <textarea class="form-input" id="vinyl-desc" name="vinyl-desc"></textarea>
            </div>

            <div class="form-group">
                <label for="vinyl-price"> Price:($) </label>
                <input class="form-input" type="number" id="vinyl-price" name="vinyl-price"/>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary"> Create Listing </button>
            </div>

        </form>

        {{else}}

        <form class="form new-listing-form">
            <div class="form-group">
                <label for="cd-title"> CD Title: </label>
                <input class="form-input" type="text" id="cd-name" name="cd-name"/>
            </div>

            <div class="form-group">
                <label for="cd-artist"> Artist: </label>
                <input class="form-input" type="text" id="cd-artist" name="cd-artist"/>
            </div>

            <div class="form-group">
                <label for="cd-genre"> Genre: </label>
                <input class="form-input" type="text" id="cd-genre" name="cd-genre"/>
            </div>

            <div class="form-group">
                <label for="cd-desc"> Description: </label>
                <textarea class="form-input" id="cd-desc" name="cd-desc"></textarea>
            </div>

            <div class="form-group">
                <label for="cd-price"> Price:($) </label>
                <input class="form-input" type="number" id="cd-price" name="cd-price"/>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary"> Create Listing </button>
            </div>

        </form>
        {{/if}}
    </div>

    {{#if vinyls.length}}
    <div class="col-md-6 vinyl-list">
        <h3>Current Listings:</h3>

        {{#each vinyls as | vinyl | }}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/vinyl/{{vinyl.id}}">{{vinyl.name}}</a></h4>
            </div>
            <div class="col-md-4">
                <button class="btn btn-sm btn-primary" data-id="{{vinyl.id}}"> Add to Cart </button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="../public/js/script.js"></script>