{{#each listings as |disc| }}
<div class="row mb-4 listings">
    <div class="col-md-5">
            {{#if disc.cover_art}}
                <img class="cover-art" src="{{disc.cover_art}}" alt="{{disc.album_title}}" />
                {{else}}
                <img class="cover-art" src="/img/disc-icon.png">
            {{/if}}
            <a href="/listing/{{disc.id}}">{{disc.artist}}</a>
        <h2>{{disc.album_title}}</h2>
        <p>By: {{disc.artist}}</p>
        <p>Genre: {{disc.genre}}</p>
        <p>Format: {{disc.format}}</p>
        <p>Condition: {{disc.condition}}</p>
        <p>Descritption: {{disc.description}}</p>
        <p>Price: {{disc.price}}</p>
        <p>Seller: {{disc.User.name}}</p>
    </div>
    <div>
      <button id="addFavoriteBtn" class="btn btn-sm btn-danger" data-id="{{disc.id}}">Save To Favorites</button>
    </div>
    <div>
      <button id="addCartBtn" class="btn btn-sm btn-danger" data-id="{{disc.id}}">Add To My Cart</button>
    </div>
</div>
{{/each}}