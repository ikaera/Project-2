{{#each listings as |disc| }}
<div class="row mb-4 vinyl">
    <div class="col-md-5">
        <h2>
            {{{get_img}}}
            {{#if disc.cover_art}}
                <img class="cover-art" src="{{disc.cover_art}}" />
                {{else}}
                <img class="cover-art" src="/img/disc-icon.png">
            {{/if}}
            <a href="/listings/{{disc.id}}">{{disc.artist}}</a>

        </h2>

        <p>
            <span for="img"/>
        </p>
    </div>
</div>
{{/each}}