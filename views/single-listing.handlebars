<div class="row mb-4 listings">
    <div class="col-md-5">
        {{#if listing.cover_art}}
        <img class="cover-art" src="{{listing.cover_art}}" alt="Cover Art for {{listing.album_title}} by {{listing.artist}}" />
        {{else}}
        <img class="cover-art" src="/img/listing-icon.png">
