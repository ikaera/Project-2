{{#each cassettes as | cassette |}}
    <section class="cassette">
        <img class="cover-art" src="{{cassette.cover_art}}" alt="Cover Art for {{cassette.album_title}} by {{cassette.artist}}">
        <div class="cassette-details">
            <h3>{{cassette.album_title}}</h3>
            <p>By: {{cassette.artist}}</p>
            <p>Genre: {{cassette.genre}}</p>
            <p>Format: Cassette</p>
            <p>Condition: {{cassette.condition}}</p>
            <p>Description: {{cassette.description}}</p>
            <p>Price: {{cassette.price}}</p>
        </div>
        <div>
            <button id="addFavoriteBtn" class="btn btn-sm btn-danger" data-id="{{disc.id}}">Save To Favorites</button>
        </div>
        <div>
            <button id="addCartBtn" class="btn btn-sm btn-danger" data-id="{{disc.id}}">Add To My Cart</button>
        </div>
    </section>
{{/each}}