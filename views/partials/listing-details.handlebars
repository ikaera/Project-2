<div class="log-container-profile">
    <div class="card-wrap-profile pad-log">
        {{!-- adding enctype to adjust for multer --}}
        <form class="form" id="new-listing-form" enctype="multipart/form-data" action="/api/listings" method="post">
            <div class="log-form">
                <span class="log-title pad-title">Create New Listing</span>

                <span class="text pad-text">Album Title</span>
                <div class="log-input-wrap pad-box">
                    <input class="input-here" type="text" id="listing-name">
                </div>

                <span class="text pad-text">Album Artist</span>
                <div class="log-input-wrap pad-box">
                    <input class="input-here" type="text" id="listing-artist">
