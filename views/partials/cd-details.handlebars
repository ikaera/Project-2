{{#each cds as | cd |}}
    <section class="cd">
        <img class="cover-art" src="{{cd.cover_art}}" alt="Cover Art for {{cd.album_title}} by {{cd.artist}}">
        <div class="cd-details">
            <h3>{{cd.album_title}}</h3>
            <p>By: {{cd.artist}}</p>
            <p>Genre: {{cd.genre}}</p>
            <p>Format: CD</p>
            <p>Condition: {{cd.condition}}</p>
            <p>Description: {{cd.description}}</p>
            <p>Price: {{cd.price}}</p>
        </div>
        <div>
            <button id="addFavoriteBtn" class="btn btn-sm btn-danger" data-id="{{disc.id}}">Save To Favorites</button>
        </div>
        <div>
            <button id="addCartBtn" class="btn btn-sm btn-danger" data-id="{{disc.id}}">Add To My Cart</button>
        </div>
    </section>
{{/each}}