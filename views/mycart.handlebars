        <section class="cart-item-section">
            <h1>Your Shopping Cart</h1>
            <br>

            <table class="table_block mpitems push_down table_responsive">
                <thead>
                    <tr>
                        <th class="info_head" colspan="2">Disc List</th>
                        <th class="seller_head">Users</th>
                        <th class="price_head">$</th>
                        <th class="format_head">Vinyl, CD, Cassettes</th>
                        {{!-- <th class="add_save">Save</th> --}}
                        <th class="add_save">Remove</th>
                        {{!-- <th class="add_cart">Purchase</th> --}}
                    </tr>
                </thead>
                <tbody>
                    <tr class="disc_item">
                        {{#each cartItems}}
                        <td class="disc_img">
                            {{#if listing.cover_art}}
                            <img class="cover-art" src="{{listing.cover_art}}" alt="{{listing.artist}}" />
                            {{else}}
                            <img class="cover-art" src="/img/disc-icon.png">
                            {{/if}}
                            {{!-- <a href="/listing/{{disc.id}}">{{disc.artist}}</a> --}}
                        </td>
                        <td class="disc_desc">
                            <a href="/listing/{{listing.id}}"><strong>{{listing.album_title}}</strong></a>
                            <br>
                            <p>Artist: {{listing.artist}}</p>
                            <br>
                            <p>Condition: {{listing.condition}}</p>
                            <br>
                            <p>Description: {{listing.description}}</p>
                        </td>
                        <td class="seller_info">Seller: {{user.name}}</td>
                        <td class="item_price">Price: ${{listing.price}}</td>
                        <td class="item_format">Format: {{listing.format}}</td>
                        <td class="remove_button">
                            <button id="cartRemoveBtn" class="btn btn-sm btn-danger cartRemoveBtn"
                                data-id="{{listing.id}}">Remove From Cart</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>

        <section class="mycart">
            <h2 class="total-cart1">Your Subtotal:</h2>
            <button id="cartPurchaseBtn1" class="btn btn-sm btn-danger cartPurchaseBtn1" data-id="{{listing.id}}">Proceed
                to
                Checkout</button>
        </section>











