<div class="row disc-listing">
    <div class="col-auto disc-listing">
        {{!-- this will require Including the User model and name attribute in the Home Route for /listing in order to
        properly show the Username --}}
        <h2 class="font-black">{{user.name}}'s Listings:</h2>
    </div>
</div>
<div class="row mt-4 disc-listing-single-user">

    <table class="table_block-profile mpitems push_down table_responsive">
        <thead>
            <tr>
                <th class="info_head" colspan="2">Disc List</th>
                {{!-- <th class="seller_head">Users</th> --}}
                <th class="price_head">$</th>
                <th class="format_head">Vinyl, CD, Cassettes</th>
                {{!-- <th class="add_save">Save</th> --}}
                {{!-- <th class="add_save">Remove</th> --}}
                <th class="add_cart">Purchase</th>
            </tr>
        </thead>
        <tbody>
            <tr class="disc_item">
                {{#each userListings as |listing|}}
                <td class="disc_img">
                    {{#if listing.cover_art}}
                    <img class="cover-art" src="{{listing.cover_art}}" alt="{{listing.artist}}" />
                    {{else}}
                    <img class="cover-art" src="/img/disc-icon.png">
                    {{/if}}
                    {{!-- <a href="/listing/{{disc.id}}">{{disc.artist}}</a> --}}
                </td>
                <td class="disc_desc">
                    <a href="/listing/{{listing.id}}"><strong>{{listing.album_title}}</strong></a>
                    <br>
                    <p>Artist: {{listing.artist}}</p>
                    <br>
                    <p>Condition: {{listing.condition}}</p>
                    <br>
                    <p>Description: {{listing.description}}</p>
                </td>
                {{!-- <td class="seller_info">Seller: {{user.name}}</td> --}}
                {{!-- single-user only showing listings for a specific seller already, so showing seller with user name is not necessary here either --}}
                <td class="item_price">Price: ${{listing.price}}</td>
                <td class="item_format">Format: {{listing.format}}</td>
                <td class="save_button">
                    <button id="addFavoriteBtn" class="btn btn-sm btn-danger" data-id="{{disc.id}}">Save to
                        Favorites</button>
                </td>
                <td class="cart_button">
                    <button id="plusCartBtn" class="btn btn-sm btn-danger addCartBtn" data-id="{{listing.id}}">Add to
                        Cart</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
